{
  "name": "unite-backend",
  "version": "1.0.0",
  "description": "Production-ready Node.js backend for Unite CRM",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc --project tsconfig.json",
    "lint": "eslint src --ext .ts --max-warnings 5",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "test": "jest --passWithNoTests",
    "test:cov": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "docker:build": "docker build -t unite-backend:latest .",
    "docker:run": "docker run -p 3000:3000 --env-file .env unite-backend:latest",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down -v",
    "docker:compose:logs": "docker-compose logs -f app",
    "docker:compose:migrate": "docker-compose exec app npm run migrate",
    "load-test": "k6 run load-tests/k6-test.js",
    "health-check": "curl -f http://localhost:3000/health || exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Nishant755/unite-backend.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Nishant755/unite-backend/issues"
  },
  "homepage": "https://github.com/Nishant755/unite-backend#readme",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.937.0",
    "@aws-sdk/client-sns": "^3.936.0",
    "@aws-sdk/client-sqs": "^3.470.0",
    "@aws-sdk/s3-request-presigner": "^3.470.0",
    "@sentry/node": "^7.91.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "opossum": "^8.5.0",
    "rate-limiter-flexible": "^5.0.0",
    "twilio": "^4.19.0",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.6",
    "@types/opossum": "^8.1.9",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^8.47.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=9.0.0"
  }
}
