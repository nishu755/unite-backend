# Environment: development, staging, production
NODE_ENV=development
PORT=3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-random
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars-random
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Database - MySQL
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=root_password_change_me
DB_NAME=unite_db
DB_CONNECTION_LIMIT=10

# Database - MongoDB
MONGODB_URI=mongodb://localhost:27017/unite
MONGODB_DB_NAME=unite_logs

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# S3 Buckets
S3_BUCKET_IMAGES=unite-images-prod
S3_BUCKET_CSV=unite-csv-prod

# SNS Topic
SNS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789012:unite-notifications

# SQS Queue
SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789012/unite-csv-processing

# Twilio SMS
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Error Tracking - Sentry
SENTRY_DSN=https://key@sentry.io/project_id

# CORS Configuration (comma-separated)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,https://unite.example.com

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Logging
LOG_LEVEL=debug

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_URL=/api-docs