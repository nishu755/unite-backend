env
# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# MySQL
DB_HOST=localhost
DB_PORT=3306
DB_USER=unite_user
DB_PASSWORD=unite_password
DB_NAME=unite_db
DB_CONNECTION_LIMIT=10

# MongoDB
MONGODB_URI=mongodb://localhost:27017/unite
MONGODB_DB_NAME=unite_logs

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# AWS
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_IMAGES=unite-images-bucket
S3_BUCKET_CSV=unite-csv-bucket
SNS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789:unite-notifications
SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789/unite-csv-queue

# Twilio
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# Sentry
SENTRY_DSN=your-sentry-dsn

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com